<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filedPage">
    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1sp"
        android:background="@drawable/shapebar">
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/header_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="জমির বিবরণ"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/heading_of_field"
        android:layout_below="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:text="আপনার জমি সমূহ :"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/refresh"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/sync"
        android:layout_below="@+id/head"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="17dp"/>


    <RelativeLayout
        android:id="@+id/middle_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_of_field"
        android:layout_marginTop="10sp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp">
        <EditText
            android:id="@+id/deed_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:inputType="number"
            android:hint="দলিল ক্রমিক নং." />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@+id/deed_no"

            />
        <ImageView
            android:id="@+id/new_field"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/spinner"
            android:src="@drawable/plus"/>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="20sp"
        android:layout_below="@id/middle_edit" />

    <ImageView
        android:id="@+id/addField"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/plus"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>